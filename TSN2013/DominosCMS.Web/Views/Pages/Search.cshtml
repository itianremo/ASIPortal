@model IEnumerable<DominosCMS.Models.Page>

@{
    ViewBag.Title = "Search";
}

<h2>Search results: </h2>


@if (Model.Count() == 0)
{ 
    <p style="font-weight: bold">No results found for your search, please try again</p>
}
else
{
    

    foreach (var item in Model)
    {
     <h3>@Html.ActionLink(item.Title, "Details", new {url = item.Url})</h3>   
     <p>@Html.Raw(item.Contents)</p>
    }

}