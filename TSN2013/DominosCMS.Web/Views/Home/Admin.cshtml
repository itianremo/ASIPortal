@{
    ViewBag.Title = "Admin";
}

@section header {
    <style type="text/css">
         #mainContent ul.cp,  ul.cp li {
            margin: 0; 
            padding: 0;
            list-style-type: none;
        }

        #mainContent ul.cp li {
            width: 120px;
            margin: 15px 30px;
            float: left;
            text-align: center;
        }

        #mainContent ul.cp li img { display: block; border: none; margin: 0 auto; }
        
        #mainContent ul.cp  a { text-decoration: none; color: Blue; display: block; padding-top: 10px; }
        #mainContent ul.cp  a:hover { background-color: #ccc; color: #000;}
    </style>
}
<h2>Admin Control Panel</h2>
<ul class="cp">
