@model ICollection<DominosCMS.Models.Product>

@{
    ViewBag.Title = "Search results";
}

    <h2>Search results</h2>
    @if (Model.Count() == 0) { 
        <p>No results match your search terms</p>
     } 
    @foreach (var item in Model) { 
        <h3><a href='@Url.Action("Index", "ProductsViewer", new {id = item.URL}, "http")'>@item.Title</a></h3>
        <p>@item.ShortDesc </p>
        <p style="color: gray">@Url.Action("index", "ProductsViewer", new {id = item.URL}, "http") </p>
        
    }