@model IList<DominosCMS.Models.CustomProduct>



    @if (Model.Count == 0)
    { 
        <p style="text-align: center">Your don't have any custom products</p>
    }  else {

<table class="list tablesorter">
    <thead>
        <tr>
            <th>Type</th>
            <th>Product Line</th>
            <th>Product</th>
            <th>Expires</th>
            <th class="{sorter: false}"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @if (item.ProductLine != null) {
                <span>@Html.DisplayFor(modelItem => item.ProductLine.Title)</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
            @if (item.Expires.HasValue) { 
                <span>@item.Expires.Value.ToShortDateString()</span>
            }
            </td>
            <td>
                @Html.ActionLink("Add To Queue", "AddCustomToQueue", new { id = item.ID, type = item.Type })
            </td>
        </tr>
    }
    </tbody>
</table>    }


