@model DominosCMS.Web.Models.SubmittalBuilderModel

        <div class="form-line">
            <label>Web Depth:</label>
            @Html.DropDownList("WebDepth", new SelectList(Model.WebDepths, "Key", "Value"), "Select") 
        </div>
        <div id="dvMilThickness">

        </div>

<script type="text/javascript">

    $(function () {
        $("#WebDepth").change(function () {
            var id = $("#product").val();
            $($("<span/>", { id: "fieldsLoader", "class": "loading" })).insertAfter(this).show();

            var Selects = new Array();
            Selects[0] = $("#WebDepth").val();

            var fields = $("#dvMilThickness");
            var url = "/Submittals/LoadFields2?id=" + id + "&SelectNo=1&Selects=" + Selects//"Url.Action("Submittals", "LoadFields2", new { id = 0, SelectNo = 1})";   ;

            $(fields).load(url, null, function () {
                updateSections();
                var ml = $("#editmt").val();
                if (ml) {
                    $("#fields #MilThickness").val(ml);
                    $("#fields #MilThickness").trigger("change");
                }

            });

            if ($(this).val() > 250) {
                if ($("#photo2").val())
                    $("#productImage").attr("src", $("#photo2").val());
                else {
                    $("#productImage").hide();
                    $("#sectionLabel").remove();
                }

            } else {
                if ($("#photo1").val())
                    $("#productImage").attr("src", $("#photo1").val());
                else {
                    $("#productImage").hide();
                    $("#sectionLabel").remove();
                }
            }
        });
    });
</script>
