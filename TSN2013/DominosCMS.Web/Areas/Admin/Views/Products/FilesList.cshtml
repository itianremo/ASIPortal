@model IEnumerable<DominosCMS.Models.ProductFile>

@{
    ViewBag.Title = "FilesList";
}

<table class="list" style="margin-top: 10px;" id="filesList">
<tr>
    <th>Title</th>
    <th>File name</th>
    <th>Type</th>
    <th >
    </th> 
</tr>
@foreach (var item in Model)
{ 
                    
    <tr>
        <td>@item.Title @Html.Hidden("IDs", item.ID)</td>
        <td>@item.Filename</td>
        <td>@item.Type</td>
        <td class="actions">
        @Html.ImageActionLink(Url.Content("~/_static/images/icons/edit.jpg"), "Edit", Url.Action("EditFile", new { id = item.ID }), new { @class = "edit-link" })
        @Html.ImageActionLink(Url.Content("~/_static/images/icons/delete2.jpg"), "Delete", Url.Action("DeleteFile", new { id = item.ID }), new { @class = "delete-link" })
    </td> 


    </tr>
              
}
</table>
